<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.PopUp">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="inactive_button">
        <item name="android:background">@color/color_inactive</item>
    </style>

    <style name="next_button">
        <item name="android:background">@drawable/button_next</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="previous_button">
        <item name="android:background">@drawable/button_prev</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="buttons">
        <item name="android:textColor">@color/text_buttons</item> <!--text_white_background -->
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_border</item> <!--text_white_background -->
    </style>
    <style name="button_details">
        <item name="android:textColor">@color/background</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/toolbar</item>
    </style>


    <style name="questionnaire0_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="questionnaire_text">
        <item name="android:textSize">16sp</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="results_text">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="sample_radio_buttons">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">@integer/feel_table_other_column_weight</item>
    </style>


</resources>
