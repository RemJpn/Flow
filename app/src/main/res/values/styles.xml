<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="inactive_button">
        <item name="android:background">@color/color_inactive</item>
    </style>

    <style name="next_button">
        <item name="android:background">@color/color_next</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="previous_button">
        <item name="android:background">@color/color_previous</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttons">
        <item name="android:background">@color/buttons</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="results_text">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>


</resources>
